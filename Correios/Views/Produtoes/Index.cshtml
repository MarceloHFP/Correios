@model IEnumerable<Site.test.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Correios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar um produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Nome)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Marca)</th>
            <th scope="col">Data de chegada</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Destinatario)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Destino)</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Marca)</td>
                <td>@Html.DisplayFor(modelItem => item.Data)</td>
                <td>@Html.DisplayFor(modelItem => item.Destinatario)</td>
                <td>@Html.DisplayFor(modelItem => item.Destino)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
